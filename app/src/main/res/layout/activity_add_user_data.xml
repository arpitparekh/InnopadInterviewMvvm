<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".task_one.AddUserDataActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/tilName"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Enter Name"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edtName"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/tilSurName"
            android:layout_below="@id/tilName"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Enter Surname"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edtSurName"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/tilEmail"
            android:layout_below="@id/tilSurName"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Enter Email"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edtEmail"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/tilPassword"
            android:layout_below="@id/tilEmail"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:endIconMode="password_toggle"
            android:hint="Enter Password"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edtPassword"
                android:inputType="numberPassword"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/tilConfirmPassword"
            app:endIconMode="password_toggle"
            android:layout_below="@id/tilPassword"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Confirm Password"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edtConfirmPassword"
                android:inputType="numberPassword"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_below="@id/tilConfirmPassword"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:id="@+id/btnDob"
            android:layout_height="wrap_content"
            android:text="Choose Date"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/tilMobile"
            android:layout_below="@id/btnDob"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="Enter Mobile Number"
            android:layout_marginRight="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/edtNumber"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:layout_width="300dp"
            android:layout_below="@id/tilMobile"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:id="@+id/spinnerGender"
            android:layout_height="50dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSubmit"
            android:layout_below="@id/spinnerGender"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:text="Submit"/>

    </RelativeLayout>

</ScrollView>